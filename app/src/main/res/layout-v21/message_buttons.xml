<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_marginTop="3pt"
    android:layout_marginBottom="3pt">

    <ImageView
        android:id="@+id/reply_button"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:scaleType="fitCenter"
        android:src="?attr/replyIcon"
        android:alpha="0.4"
        android:adjustViewBounds="false"
        android:contentDescription="@string/menu_item_reply"/>

    <ImageView
        android:id="@+id/reblog_button"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:scaleType="fitCenter"
        android:layout_marginLeft="50dp"
        android:src="?attr/reblogIcon"
        android:alpha="0.4"
        android:contentDescription="@string/menu_item_reblog"/>

    <ImageView
        android:id="@+id/reblog_button_tinted"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="50dp"
        android:src="@drawable/reblog_icon_tinted"
        android:contentDescription="@string/menu_item_reblog"/>

    <ImageView
        android:id="@+id/favorite_button"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="50dp"
        android:scaleType="fitCenter"
        android:src="?attr/favoriteBorderIcon"
        android:alpha="0.4"
        android:adjustViewBounds="false"
        android:contentDescription="@string/menu_item_favorite"/>

    <ImageView
        android:id="@+id/favorite_button_tinted"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:scaleType="fitCenter"
        android:src="@drawable/favorite_border_icon_tinted"
        android:adjustViewBounds="false"
        android:contentDescription="@string/menu_item_favorite"/>
</LinearLayout>

        